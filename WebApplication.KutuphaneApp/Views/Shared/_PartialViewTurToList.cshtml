@model HashSet<_01_KT.Entity.Entity.Tur>

<table class="table table-hover  text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tur Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TurAdi</td>
                <td>@Html.ActionLink("Güncelle", "Update", new { item.Id }, new { @class = "btn btn-outline-success" })</td>
                <td>@Html.ActionLink("Sil", "Delete", new { item.Id }, new { @class = "btn btn-outline-danger" })</td>
            </tr>
        }
    </tbody>
</table>

