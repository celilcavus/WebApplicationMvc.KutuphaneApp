@model HashSet<_01_KT.Entity.Entity.Ogrenci>

<table class="table table-hover  text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Öğrenci Adı</th>
            <th>Öğrenci Soyadı</th>
            <th>Cinsiyet</th>
            <th>Doğum Tarihi</th>
            <th>Sınıf</th>
            <th>Puan</th>
            <th>Guncelle</th>
            <th>Ekle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.OgrenciAd</td>
                <td>@item.OgrenciSoyad</td>
                <td>@item.Cinsiyet</td>
                <td>@item.DogumTarih</td>
                <td>@item.Sinif</td>
                <td>@item.Puan</td>
                <td>@Html.ActionLink("Güncelle", "Update", new { item.Id }, new { @class = "btn btn-outline-success" })</td>
                <td>@Html.ActionLink("Sil", "Delete", new { item.Id }, new { @class = "btn btn-outline-danger" })</td>
            </tr>
        }
    </tbody>
</table>
