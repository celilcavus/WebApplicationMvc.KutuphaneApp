@model HashSet<_01_KT.Entity.View.KitapView>

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kitap Adı</th>
            <th>Yazar Adı</th>
            <th>Kitap Türü</th>
            <th>Sayfa Sayısı</th>
            <th>Puan</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.KitapAdi</td>
                <td>@item.YazarAd</td>
                <td>@item.TurAdi</td>
                <td>@item.SayfaSayisi</td>
                <td>@item.Puan</td>
                <td>@Html.ActionLink("Güncelle", "Update", new { item.Id }, new { @class = "btn btn-outline-success" })</td>
                <td>@Html.ActionLink("Sil", "Delete", new { item.Id }, new { @class = "btn btn-outline-danger" })</td>
            </tr>
        }
    </tbody>
</table>



